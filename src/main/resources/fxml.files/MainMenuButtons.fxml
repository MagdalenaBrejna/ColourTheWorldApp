<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.magdalena.brejna.colourtheworldapp.controllers.MainMenuButtonsController">
   <children>
      <VBox>
         <children>
            <Button mnemonicParsing="false" onAction="#openNewProject" prefHeight="250.0" prefWidth="250.0" text="%add.project">
               <VBox.margin>
                  <Insets bottom="30.0" left="110.0" right="30.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="250.0" prefWidth="250.0" text="%sign.in">
               <VBox.margin>
                  <Insets bottom="30.0" left="110.0" right="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox>
         <children>
            <Button mnemonicParsing="false" prefHeight="250.0" prefWidth="250.0" text="%sign.up">
               <VBox.margin>
                  <Insets bottom="30.0" right="30.0" top="30.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="250.0" prefWidth="250.0" text="%my.projects">
               <VBox.margin>
                  <Insets bottom="30.0" right="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</HBox>
