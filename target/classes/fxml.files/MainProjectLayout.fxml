                        <Insets bottom="30.0" left="20.0" top="30.0" />
                     </HBox.margin>
                  </ComboBox>
                  <VBox prefHeight="85.0" prefWidth="261.0">
                     <children>
                        <Slider fx:id="dilationSlider" blockIncrement="0.5" majorTickUnit="1.0" max="3.0" minorTickCount="5" prefHeight="62.0" prefWidth="201.0" showTickMarks="true">
