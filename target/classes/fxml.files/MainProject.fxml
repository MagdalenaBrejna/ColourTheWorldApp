<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainProjectBorderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.magdalena.brejna.colourtheworldapp.controllers.MainProjectController">
    <center>
        <fx:include fx:id="imageView" source="ImageView.fxml" />
    </center>
    <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="%file">
                  <items>
                    <MenuItem mnemonicParsing="false" text="%close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="%edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="%alwaysOnTop" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="%help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="%about" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ChoiceBox prefHeight="31.0" prefWidth="203.0">
               <VBox.margin>
                  <Insets left="370.0" right="20.0" top="20.0" />
               </VBox.margin>
            </ChoiceBox>
         <fx:include fx:id="projectMenu" source="ProjectMenu.fxml" />
         </children>
      </VBox>
   </top>
   <bottom>
        <fx:include fx:id="projectButtons" source="ProjectButtons.fxml" />
   </bottom>
</BorderPane>
