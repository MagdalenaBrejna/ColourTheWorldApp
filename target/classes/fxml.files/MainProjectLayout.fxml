                        <Insets bottom="30.0" left="40.0" right="20.0" top="30.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="saveProjectButton" mnemonicParsing="false" onAction="#saveProject" prefHeight="25.0" prefWidth="90.0" text="%save.button">
                     <HBox.margin>
                        <Insets bottom="30.0" top="30.0" />
                     </HBox.margin>
                  </Button>
                  <ComboBox fx:id="projectChoiceComboBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseClicked="#clickProjectChoiceComboBox" prefHeight="25.0" prefWidth="250.0" promptText="Choose">
