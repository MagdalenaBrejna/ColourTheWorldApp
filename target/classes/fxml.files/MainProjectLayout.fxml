                              <Insets bottom="20.0" top="15.0" />
                           </padding>
                        </Slider>
                        <Slider fx:id="contrastSlider" blockIncrement="5.0" max="255.0" minorTickCount="1" showTickMarks="true" />
                     </children>
                     <padding>
                        <Insets left="20.0" right="40.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <AnchorPane prefHeight="358.0" prefWidth="720.0" BorderPane.alignment="CENTER">
         <children>
            <SplitPane fx:id="splitPane" dividerPositions="0.481981981981982" prefHeight="299.0" prefWidth="460.0" AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="10.0">
               <items>
                  <ScrollPane fx:id="photoScrollPane" hvalue="0.5" onScroll="#scrollPhoto" vvalue="0.5">
                     <content>
                        <AnchorPane fx:id="photoBasePane">
                           <children>
                              <ImageView fx:id="photoImageView" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </AnchorPane>
                     </content>
                  </ScrollPane>
                  <ScrollPane fx:id="projectScrollPane" hvalue="0.5" onScroll="#scrollProject" vvalue="0.5">
                     <content>
                        <AnchorPane fx:id="projectBasePane">
                           <children>
                              <ImageView fx:id="colouringBookImageView" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </AnchorPane>
                     </content>
                  </ScrollPane>
               </items>
            </SplitPane>
            <Button fx:id="openZoomButton" mnemonicParsing="false" onAction="#openZoomWindow" prefHeight="30.0" prefWidth="140.0" text="%newWindow.button" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="120.0">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/130181.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="createColouringBookButton" mnemonicParsing="false" onAction="#createColouringBook" prefHeight="30.0" prefWidth="140.0" text="%create.button" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="70.0">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/126483.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="openImageButton" mnemonicParsing="false" onAction="#selectImage" prefHeight="30.0" prefWidth="140.0" text="%choose.button" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="20.0">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/129943.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="saveColouringBookButton" mnemonicParsing="false" onAction="#saveColouringBook" prefHeight="30.0" prefWidth="140.0" text="%saveAs.button" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="170.0">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/126480.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="deleteImageButton" mnemonicParsing="false" onAction="#deleteImage" prefHeight="30.0" prefWidth="140.0" text="%delete.button" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="220.0">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/126468.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="closeProjectButton" mnemonicParsing="false" onAction="#closeProject" prefHeight="30.0" prefWidth="140.0" text="%close.button" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="270.0">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/126469.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </center>

</BorderPane>
