<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.magdalena.brejna.colourtheworldapp.controllers.MainMenuButtonsController">
   <children>
      <VBox>
         <children>
            <Button mnemonicParsing="false" onAction="#openNewProject" prefHeight="250.0" prefWidth="250.0" text="%add.project">
               <VBox.margin>
                  <Insets bottom="30.0" left="110.0" right="30.0" top="30.0" />
               </VBox.margin>
               <graphic>
                  <ImageView fitHeight="64.0" fitWidth="68.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/126483.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Italic" size="20.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="250.0" prefWidth="250.0" text="%sign.in">
               <VBox.margin>
                  <Insets bottom="30.0" left="110.0" right="30.0" />
               </VBox.margin>
               <graphic>
                  <ImageView fitHeight="83.0" fitWidth="81.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/126479.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Italic" size="20.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <VBox>
         <children>
            <Button mnemonicParsing="false" prefHeight="250.0" prefWidth="250.0" text="%sign.up">
               <VBox.margin>
                  <Insets bottom="30.0" right="30.0" top="30.0" />
               </VBox.margin>
               <graphic>
                  <ImageView fitHeight="75.0" fitWidth="73.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/126486.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Italic" size="20.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="250.0" prefWidth="250.0" text="%my.projects">
               <VBox.margin>
                  <Insets bottom="30.0" right="30.0" />
               </VBox.margin>
               <graphic>
                  <ImageView fitHeight="81.0" fitWidth="78.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/126474.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Italic" size="20.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</HBox>
