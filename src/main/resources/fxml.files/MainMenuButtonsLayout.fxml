<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.magdalena.brejna.colourtheworldapp.controllers.MainMenuButtonsController">
   <center>
      <AnchorPane prefHeight="300.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="300.0" prefWidth="600.0">
               <children>
                  <Button maxHeight="400.0" maxWidth="400.0" mnemonicParsing="false" onAction="#openProject" prefHeight="250.0" prefWidth="250.0" text="%add.project">
                     <graphic>
                        <ImageView fitHeight="64.0" fitWidth="68.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/126483.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font name="System Italic" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="40.0" left="40.0" right="20.0" top="40.0" />
                     </HBox.margin>
                  </Button>
                  <Button maxHeight="400.0" maxWidth="400.0" mnemonicParsing="false" prefHeight="250.0" prefWidth="250.0" text="%my.projects">
                     <graphic>
                        <ImageView fitHeight="81.0" fitWidth="78.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/126474.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font name="System Italic" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="40.0" left="20.0" right="40.0" top="40.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
